<resources>

    <style name="Theme.MatLog" parent="Base.Theme.MatLog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Base.Theme.MatLog" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:windowBackground">@color/primary_dark</item>
    </style>

    <style name="Theme.MatLog.Amoled" parent="Base.Theme.MatLog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Base.Theme.MatLog.Amoled" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary_amoled</item>
        <item name="colorPrimaryDark">@color/primary_dark_amoled</item>
        <item name="colorAccent">@color/accent_amoled</item>

        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:windowBackground">@color/primary_dark_amoled</item>
    </style>

    <style name="Theme.MatLog.Light" parent="Base.Theme.MatLog.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="toolbarShadow">@drawable/shadow</item>
    </style>

    <style name="Base.Theme.MatLog.Light" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
        <item name="colorAccent">@color/light_accent</item>

        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>


    </style>

    <style name="Theme.MatLog.AlertDialog" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:colorBackground">@color/primary_dark</item>
    </style>
</resources>
